

.container {
  /* padding: 10rpx 10rpx; */
  margin: 10rpx 10rpx;
  
}
.container .info {
  /* margin: 20rpx 30rpx; */
  padding: 20rpx 20rpx;
  border: rgb(196, 189, 189) 1rpx solid;
  border-radius: 20rpx;

  background-color: #fff;
  box-shadow: 0 10rpx 50rpx 0rpx rgb(204, 202, 216);
  
}
.container .info .fold-row-box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.container .info .row-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.container .info .col-box {
  display: flex;
  flex-direction: column;
}
.container .info .info-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.container .info .getInfo {
  display: flex;
  flex-direction: row;
  /* 主轴上排列 */
  justify-content: space-between;
  /* 侧轴上的排列方式 */
  align-items: center;
  
  margin: 30rpx 0rpx;
}
.container .info .title{
  font-size: 38rpx;
  margin: 5rpx 0rpx;
}
.container .info .text{
  font-size: 30rpx;
  
  margin: 5rpx 0rpx;
}
.container .info .small-text{
  font-size: 28rpx;
  
  margin: 3rpx 0rpx;
}
.container .info .button {
  height: 150rpx;
  width: 200rpx;
  padding: 40rpx;
}
.container .info .show{ 
  font-size: 30rpx;
  color: chartreuse;
 
}
.popModal {
  overflow: hidden;
  background: #fff;
  position: absolute;
  left: 200rpx;
  top: 300rpx;
  width: 600rpx;
}
.main-content{
  flex: 1;
  /* height: 100%; */
  /* overflow-y: hidden;  */
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 38rpx;

  height: 100%;
}

/* main-content */
.main-content .picker{
  padding: 5rpx;
  /* background-color: #FFFFFF; */
  background-color: rgb(236, 236, 236);
  width: 400rpx;
  height: 60rpx;
  border-radius: 12rpx;
}

/* 在设备状态modal框中配合modal-box 来使用 */
.main-content .device-space-between {
  justify-content: space-between;
}

.main-content .bottom_border {
  border-bottom: 1rpx solid black;
}

.modal-box{
  display: flex;
  flex-direction: row;
  width: auto;
  justify-content: flex-start;
  margin: 20rpx 30rpx;

}

.modal-box .title_desc {
  width: 200rpx;
}

.modal-box .radio_radio {
  margin: 10rpx 5rpx
}

.modal-box .input{
  background-color: rgb(236, 236, 236);
  border-radius: 12rpx;
  height: 60rpx;
}

.modal-box .area-input{
  background-color: rgb(245, 245, 245);
  border-radius: 12rpx;
  height: 200rpx;
  width: 400rpx;
  
  /* margin-left: 190rpx; */
}
.modal-box .col-radio-group {
  display: flex;
  flex-direction: column;
  width: 400rpx;
  justify-content: space-between;
}




.modal-box .row-box {
  display: flex;
  flex-direction: row;
}
.picker{
  padding: 5rpx;
  /* background-color: #FFFFFF; */
  background-color: rgb(236, 236, 236);
  width: 430rpx;
  height: 60rpx;
  border-radius: 12rpx;
  padding-left: 10rpx;
}
.container .info .stock-number {
  height: 60rpx;
  width: 230rpx;
  padding-left: 10rpx;
  padding-top: 10rpx;
}
.container .info .prodNumberInput {
  background-color: rgb(236, 236, 236);
  border-radius: 12rpx;
  height: 60rpx;
  width: 290rpx;
  padding-left: 10rpx;
}
.container .info .input-row-box{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 10rpx 0rpx;
}
.container .info .row-box .submitButton{
  margin: 0rpx 0rpx;
  /* height: 60rpx; */
}
/* 库存栏 */
.container .info .stock-display {
  justify-content: space-between;
  height: 90rpx;
}
.container .info .stock-display >button{
  width: 120px;
  height: 80%;
  margin: 10rpx 0rpx;
}
.container .info .row-box .radio-group .radio{
  padding-right: 60rpx;
}
.modal-button{
  margin: 10rpx 0rpx;
  background-color: rgb(236, 236, 236);
  border-radius: 12rpx;
  width: 80rpx;
  padding-left: 10rpx;
}
.task-button {
  margin-top: 30rpx;
}
.devide-line {
  border-bottom: solid 1px black;
}